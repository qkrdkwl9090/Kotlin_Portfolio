<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555968"
    android:orientation="vertical"
    tools:context=".addDiary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:orientation="vertical"
        android:padding="32dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:hint="[예시]\n오늘은..."
            android:inputType="textMultiLine"
            android:textColor="#ffffff"
            android:background="@drawable/bolder"
            android:textColorHint="#4Dffffff"
            android:textSize="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020.04.04"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="right"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#4D000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addDiary_backbutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <ImageView
            android:id="@+id/addDiary_textcolor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_text_format_black_24dp" />

        <ImageView
            android:id="@+id/addDiary_bright"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_brightness_6_black_24dp" />

        <ImageView
            android:id="@+id/addDiary_addImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_image_black_24dp" />

        <ImageView
            android:id="@+id/addDiary_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_done_black_24dp" />
    </LinearLayout>


</LinearLayout>